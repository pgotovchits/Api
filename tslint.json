{
    "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules", "node_modules/tslint-microsoft-contrib"],
    "rules": {
        "align": [
            true,
            "statements"
        ],
        "class-name": true,
        "comment-format": [
            false,
            "check-space"
        ],
        "curly": true,
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": true,
        "label-undefined": true,
        "member-access": [
            true,
            "check-accessor",
            "check-constructor"
        ],
        "member-ordering": [
            true,
            { "order": "statics-first" }
        ],
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-constructor-vars": true,
        "no-debugger": true,
        "no-duplicate-key": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "no-reference": true,
        "no-trailing-whitespace": false,
        "no-unused-variable": [
            true,
            "react"
        ],
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-var-requires": true,
        "object-literal-sort-keys": false,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "space",
                "index-signature": "space",
                "parameter": "space",
                "property-declaration": "space",
                "variable-declaration": "space"
            }
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        "use-isnan": true,
        "no-constant-condition": true,
        "no-control-regex": true,
        "no-duplicate-case": true,
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-inner-declarations": true,
        "no-invalid-regexp": true,
        "no-regex-spaces": true,
        "no-sparse-arrays": true,
        "no-unexpected-multiline": true,
        "valid-typeof": true
    }
}