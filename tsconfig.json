{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["mocha", "chai-subset", "sinon-chai"]
  },
  "exclude": [
    "node_modules",
    "compiled"
  ]
}