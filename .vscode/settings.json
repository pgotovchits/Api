{
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.idea": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/compiled": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true
    },
    "typescriptHero.resolver.pathStringDelimiter": "\"",
    "typescriptHero.resolver.ignorePatterns": [
        "typescript",
        "tslint",
        "node_modules/typings",
        "node_modules/typings-core",
        "build",
        "out",
        "dist",
        "compiled"
    ],
    "tslint.autoFixOnSave": true,
    "tsimporter.doubleQuotes": true,
    "docthis.includeTypes": false,
    "docthis.includeMemberOfOnClassMembers": false,
    "docthis.includeMemberOfOnInterfaceMembers": false
}